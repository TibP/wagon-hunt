<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @product.photo? ? cloudinary_url(@product.photo.path, height: 700, crop: "fill") : image_path("backgroundII.jpg") %>');">
  <div class="banner-content">

    <h1><%=@product.name%></h1>

    <h2><%=@product.tagline%></h2>

    <%if @product.user%>
      <h2>Posted by <%=@product.user.email%></h2>
    <% end -%>

    <p><span class="label label-default"><%=@product.category%></span></p>

    <p><%= link_to "GET IT", @product.url, class: "btn btn-primary btn-lg" %></p>
  </div>
</div>
